{
  "version": 2,
  "builds": [
    { "src": "apps/api-gateway/src/main.ts", "use": "@vercel/node" },
    { "src": "apps/auth-service/src/main.ts", "use": "@vercel/node" },
    { "src": "apps/users-service/src/main.ts", "use": "@vercel/node" },
    { "src": "apps/tickets-service/src/main.ts", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api-gateway/(.*)", "dest": "apps/api-gateway/src/main.ts" },
    { "src": "/auth-service/(.*)", "dest": "apps/auth-service/src/main.ts" },
    { "src": "/users-service/(.*)", "dest": "apps/users-service/src/main.ts" },
    { "src": "/tickets-service/(.*)", "dest": "apps/tickets-service/src/main.ts" }
  ]
}
